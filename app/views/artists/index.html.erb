<div class="container">
	<div class="row">
		<div class="artists-list">
		<% @artists.each do |a| %>
			<div class="artist col-md-3">
					<img src="<%= a.image_url %>" alt="" class="center-block"  >
					<h3 class="text-center"><%= a.name %></h3>
					<%= link_to 'Ver mas', artist_path(a), class:'btn btn-primary btn-block' %>
				</div>
			<% end %>
		</div>
 	</div>	
	
</div>